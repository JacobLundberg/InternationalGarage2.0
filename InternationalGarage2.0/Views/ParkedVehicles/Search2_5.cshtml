@model IEnumerable<InternationalGarage2_0.Models.ParkedVehicle>

@{
    ViewData["Title"] = "Search";
}

<h1>Search Garage</h1>
<br />
@if (Model.Count() == 0)
{
    <h5>There was no exact match on vehicle type or license number containing the search phrase "@ViewBag.Search2_5"!</h5>
}
else
{
    <h5>There are @Model.Count() exact matches on vehicle type or license number containing the search phrase "@ViewBag.Search2_5" listed below.</h5>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Member.Name) </th>
                <th>@Html.DisplayNameFor(model => model.LicenseNumber) </th>
                <th>@Html.DisplayNameFor(model => model.Color) </th>
                <th>@Html.DisplayNameFor(model => model.Model) </th>
                <th>@Html.DisplayNameFor(model => model.NumberOfWheels) </th>
                <th>@Html.DisplayNameFor(model => model.TimeStampCheckIn) </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @Html.DisplayFor(modelItem => item.Member.Name) </td>
                    <td> @Html.DisplayFor(modelItem => item.LicenseNumber) </td>
                    <td> @Html.DisplayFor(modelItem => item.Color) </td>
                    <td> @Html.DisplayFor(modelItem => item.Model) </td>
                    <td> @Html.DisplayFor(modelItem => item.NumberOfWheels) </td>
                    <td> @Html.DisplayFor(modelItem => item.TimeStampCheckIn) </td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Check Out</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
